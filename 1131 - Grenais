#include <stdio.h>
 
int main() 
{
    int a, b, t, x=0, i=0, g=0, e=0;
    while(1)
    {
        scanf("%d %d", &a, &b);
        printf("Novo grenal (1-sim 2-nao)\n");
        x++;
        if(a>b)
            i++;
        else if(a<b)
            g++;
        else
            e++;
        scanf("%d", &t);
        if(t==1)
            continue;
        else
            break;
    }
    printf("%d grenais\n", x);
    printf("Inter:%d\n", i);
    printf("Gremio:%d\n", g);
    printf("Empates:%d\n", e);
        
    if(i>g)
        printf("Inter venceu mais\n");
    else if(i<g)
        printf("Gremio venceu mais\n");
    else
        printf("NÃ£o houve vencedor\n");
    
 
    return 0;
}
