#include <stdio.h>
 
int main() 
{
    int x, y;
    double price = 0;
    scanf("%d%d", &x, &y);
    
    if(x == 1)
    {
        price = (double) (4.00 * y);
    }
    else if(x == 2)
    {
        price = (double) (4.50 * y);
    }
    else if(x == 3)
    {
        price = (double) (5.00 * y);
    }
    else if(x == 4)
    {
        price = (double) (2.00 * y);
    }
    else 
    {
        price = (double) (1.50 * y);
    }
    
    printf("Total: R$ %.2lf\n", price);
    
 
    return 0;
}
